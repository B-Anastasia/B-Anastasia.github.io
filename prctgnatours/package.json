{
  "name": "prctgnatours",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "watch:sass": "node-sass sass/main.scss css/style.css -w",
    "dev-server": "live-server",

    "start": "npm-run-all --parallel watch:sass dev-server",

    "compile:sass": "node-sass sass/main.scss css/style.comp.css",
    "concat:sass": "concat -o css/style.concat.css css/icon-fonts.css css/style.comp.css",
    
    "prefix:css": "npx postcss css/style.concat.css --use autoprefixer -d css",
    "compress:css": "node-sass css/style.concat.css css/style.css --output-style compressed",
    "build:css": "npm-run-all compile:sass concat:sass prefix:css compress:css"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "autoprefixer": "^9.4.3",
    "browser-sync": "^2.26.3",
    "concat": "^1.0.3",
    "gulp": "^3.9.1",
    "node-sass": "^4.10.0",
    "npm-run-all": "^4.1.5",
    "postcss-cli": "^6.1.0"
  },
  "dependencies": {}
}
